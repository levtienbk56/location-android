<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <ImageView
        android:src="@drawable/background_test3"
        android:id="@+id/image_avatar_detail_location"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_comment"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_detail_dish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Bò Lúc Lắc"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:textColor="#98000000"
            android:textSize="12dp"
            android:gravity="end"
            android:text="21 Phố Huế, Hai Bà Trưng, Hà Nội"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/like_ico"/>
            <TextView
                android:id="@+id/tv_like_count_detail_dish"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:text="7"
                android:textSize="15dp"  />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:background="@drawable/comment_ico" />
            <TextView
                android:id="@+id/tv_comment_count_detail_dish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="27"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tv_price_detail_dish"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="20-200k"
                android:textSize="15dp" />
            <TextView
                android:background="@drawable/currency_dollar_yellow"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"  />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:text="mở cửa: 9h - 20h"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="phone: 04xxx.xxxx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="list comment:" />

    <ListView
        android:id="@+id/lv_detail_dish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/background_comment" />

</LinearLayout>