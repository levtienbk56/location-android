<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_home_disk"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:src="@drawable/stub"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:layout_gravity="left|center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_search_dish"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Thit cho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_location_home_disk"
            android:textColor="#a1000000"
            android:singleLine="true"
            android:textSize="13dp"
            android:text="so 1 Dai Co Viet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/like_ico"/>
            <TextView
                android:id="@+id/tv_like_home_disk"
                android:textSize="15dp"
                android:text="7"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="20dp"  />

            <TextView
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:background="@drawable/comment_ico"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/tv_commment_home_disk"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:text="27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"/>
            <TextView
                android:text="20,000"
                android:textSize="20dp"
                android:gravity="center|right"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:background="@drawable/currency_dollar_yellow"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>